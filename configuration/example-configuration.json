{
    "ui": {
        "siteName": "Nyingarn Platform workspace",
        "tusEndpoint": "http://tus.nyingarn.net/files/",
        "termsAndConditionsOfUse": "https://nyingarn.net/nyingarn-workspace-terms-and-conditions-of-use/",
        "itemName": {
            "help": "Must consist only of alphanumeric characters and must start with a letter.",
            "checkNameStructure": "^[a-z,A-Z][a-z,A-Z,0-9]+$"
        },
        "filename": {
            "matchItemName": true,
            "helpName": "Must match the form {item identifier}-{sequence number}. {item identifier} must consist only of alphanumeric characters and must start with a letter.",
            "checkNameStructure": "^[a-z,A-Z][a-z,A-Z,0-9]+-[0-9]*\\..*$",
            "helpExtension": "Accepted file types: jpg, jpeg, png, tif, pdf",
            "checkExtension": ".*\\.(jpg|JPG|jpeg|JPEG|pdf|PDF|tif|TIF|png|PNG)$"
        }
    },
    "api": {
        "administrators": ["{user@email.com}", "{other user@somewhere.else.com}"],
        "teiMarkupControls": "/srv/configuration/tei-markup-controls.json",
        "session": {
            "lifetime": { "hours": 5 },
            "secret": "{some secret - 32 characters or longer}"
        },
        "filenaming": {
            "adminTag": "ADMIN",
            "resourceQualifierSeparator": ".",
            "identifierSegments": {
                "2": ["itemId", "resourceId"],
                "3": ["collectionId", "itemId", "resourceId"]
            }
        },
        "processing": {
            "exchange": "nyingarn"
        },
        "services": {
            "rabbit": {
                "host": "rabbit",
                "user": "guest",
                "pass": "guest",
                "port": "5672",
                "exchanges": [
                    { "name": "nyingarn", "type": "fanout", "autoDelete": true, "persistent": true }
                ],
                "queues": [
                    { "name": "nyingarn_tasks", "autoDelete": true, "subscribe": true, "limit": 1 }
                ],
                "bindings": [{ "exchange": "nyingarn", "target": "nyingarn_tasks", "keys": [] }]
            },
            "s3": {
                "endpointUrl": "http://minio:9000",
                "forcePathStyle": true,
                "bucket": "uploads",
                "awsAccessKeyId": "{ access key }",
                "awsSecretAccessKey": "{ secret key }",
                "region": "us-east-1"
            },
            "aws": {
                "awsAccessKeyId": "{ access key }",
                "awsSecretAccessKey": "{ secret key }",
                "region": "{ region }"
            },
            "describo": {
                "authorization": "{shared secret set in describo applications}",
                "url": "https://describo.nyingarn.net"
            }
        },
        "authentication": {
            "google": {
                "clientId": "{client id}",
                "clientSecret": "{client secret}",
                "redirectUri": "http://{your host}/callback-google-login",
                "discover": "https://accounts.google.com"
            },
            "aaf": {
                "clientId": "{client id}",
                "clientSecret": "{client secret}",
                "redirectUri": "http://{your host}/callback-aaf-login",
                "discover": "https://central.aaf.edu.au"
            }
        }
    }
}
